                  <mo stretchy="false">|</mo>
                </mrow>
                <mrow class="MJX-TeXAtom-ORD">
                  <mn>2</mn>
                </mrow>
              </msup>
              <mi>d</mi>
              <mi>x</mi>
            </mrow>
            <mo>]</mo>
          </mrow>
          <mrow class="MJX-TeXAtom-ORD">
            <mfrac>
              <mn>1</mn>
              <mn>2</mn>
            </mfrac>
          </mrow>
        </msup>
        <mo>=</mo>
        <msup>
          <mrow>
            <mo>[</mo>
            <mrow>
              <msubsup>
                <mo>&#x222B;<!-- ∫ --></mo>
                <mrow class="MJX-TeXAtom-ORD">
                  <mi>a</mi>
                </mrow>
                <mrow class="MJX-TeXAtom-ORD">
                  <mi>b</mi>
                </mrow>
              </msubsup>
              <mrow class="MJX-TeXAtom-ORD">
                <mo stretchy="false">|</mo>
              </mrow>
              <mi>&#x03C8;<!-- ψ --></mi>
              <mo stretchy="false">(</mo>
              <mi>x</mi>
              <mo stretchy="false">)</mo>
              <msup>
                <mrow class="MJX-TeXAtom-ORD">
                  <mo stretchy="false">|</mo>
